{
  "name": "cloudify-lsp",
  "description": "A Cloudify Language Server",
  "author": "Cloudify Platform LTD",
  "license": "LICENSE",
  "version": "0.0.1",
  "pricing": "Free",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudify-cosmo/cloudify-language-server.git"
  },
  "publisher": "cloudify-language-server",
  "categories": [],
  "keywords": [
    "cloudify",
    "devops"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:yml"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Cloudify LSP Configuration",
      "properties": {
        "cloudifyLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "cloudifyLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "esbuild": "^0.16.17",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "node-fetch": "^2.6.1",
    "yaml": "^2.1.3"
  },
  "bugs": {
    "url": "https://github.com/cloudify-cosmo/cloudify-language-server/issues"
  },
  "homepage": "https://github.com/cloudify-cosmo/cloudify-language-server#readme"
}
